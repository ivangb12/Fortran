program nr
  implicit none
  !x buscada, xi= x inicial, err error, F funcion valuada en xi, Fp derivada funcion valuada en xi
 real::x,xi,err,F,Fp
 print*,"Indique su x inicial para aplicar newton-rhapsso a la funcion  x^3-x-2"

 read*,xi
Do
   !xi - F(xi)/F´(xi)
   F=xi**3 - xi -2
   Fp=3*xi**2 - 1
 x=xi-(F/Fp)
 err=abs((x-xi)/x)*100
print*,"X= ",x,"err= ",err
 xi=x
 
 if(err<.00001)exit
end do
end program nr
